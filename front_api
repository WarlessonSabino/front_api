    <script>
        const formatter = new Intl.NumberFormat('pt-BR', { minimumFractionDigits: 2 });

        document.getElementById('fetchData').addEventListener('click', async () => {
            const cdfil = document.getElementById('cdfil').value;
            const nrorc = document.getElementById('nrorc').value;

            if (!cdfil || !nrorc) {
                alert('Por favor, preencha os campos de filial e nÃºmero do orÃ§amento.');
                return;
            }

            try {
                const response = await fetch(`http://3.19.234.123:3000/requisicoes?nrorc=${nrorc}&cdfil=${cdfil}`);
                if (!response.ok) {
                    throw new Error('Erro ao buscar os dados');
                }

                const data = await response.json();
                renderResults(data);
                document.getElementById('results').style.display = 'block';
                document.getElementById('copyButton').style.display = 'block';
            } catch (error) {
                alert(error.message);
            }
        });

        function renderResults(data) {
            const optionsContainer = document.getElementById('options');
            optionsContainer.innerHTML = '';

            data.forEach((orcamento, index) => {
                const option = document.createElement('div');
                option.innerHTML = `
                    <label>
                        <input type="checkbox" class="orcamento-checkbox" 
                               data-index="${index}" 
                               data-bruto="${orcamento.Valor_Bruto}" 
                               data-desconto="${orcamento.Valor_Desconto}" 
                               data-componentes="${orcamento['Componentes da FÃ³rmula']}">
                        ${orcamento['NÂ° OrÃ§amento']}
                    </label>
                `;
                optionsContainer.appendChild(option);
            });

            document.getElementById('selectAll').addEventListener('change', event => {
                const checked = event.target.checked;
                document.querySelectorAll('.orcamento-checkbox').forEach(checkbox => {
                    checkbox.checked = checked;
                    checkbox.dispatchEvent(new Event('change'));
                });
            });

            document.querySelectorAll('.orcamento-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', updateSelected);
            });
        }

        function updateSelected() {
    const selectedContainer = document.getElementById('selectedOrcamentos');
    const totalsContainer = document.getElementById('totals');

    selectedContainer.innerHTML = '';
    let totalBruto = 0;
    let totalDesconto = 0;
    let totalGeral = 0;
    let copiedText = '';

    const introMessage = `
âœ¨ Obrigado por escolher nossa farmÃ¡cia de manipulaÃ§Ã£o! âœ¨

Seu orÃ§amento foi concluÃ­do com sucesso e estÃ¡ prontinho para atender suas necessidades com qualidade e cuidado. Confira os detalhes abaixo:

`;

    const conclusionMessage = `
ðŸ’¡ PrÃ³ximos Passos:
ðŸ‘‰ Assim que aprovado, nossa equipe comeÃ§a imediatamente a manipular sua fÃ³rmula com todo o cuidado que vocÃª merece. Qualquer dÃºvida, estamos prontos para ajudar!

Conte conosco para sua saÃºde e bem-estar!

ðŸ’š Pharmes, sempre ao seu lado.
`;

    copiedText += introMessage; 

    document.querySelectorAll('.orcamento-checkbox:checked').forEach(checkbox => {
        const bruto = parseFloat(checkbox.getAttribute('data-bruto'));
        const desconto = parseFloat(checkbox.getAttribute('data-desconto'));
        const componentes = checkbox.getAttribute('data-componentes');

        totalBruto += bruto;
        totalDesconto += desconto;
        totalGeral += bruto - desconto;

        const formattedBruto = formatter.format(bruto);
        const formattedDesconto = formatter.format(desconto);
        const formattedGeral = formatter.format(bruto - desconto);

        const message = document.createElement('div');
        message.classList.add('message');
        message.innerHTML = `
            <strong>ðŸ’Š OrÃ§amento N:</strong> ${checkbox.parentNode.textContent.trim()}<br>
            <strong>Bruto:</strong> R$ ${formattedBruto} | <strong>Desconto:</strong> R$ ${formattedDesconto} | <strong>Geral:</strong> R$ ${formattedGeral}<br>
            <strong>ðŸ“¦ FÃ³rmula Manipulada:</strong> ${componentes}<br>
        `;
        selectedContainer.appendChild(message);

   
        copiedText += `
ðŸ’Š OrÃ§amento N: ${checkbox.parentNode.textContent.trim()}
Bruto: R$ ${formattedBruto} | Desconto: R$ ${formattedDesconto} | Geral: R$ ${formattedGeral}
ðŸ“¦ FÃ³rmula Manipulada: ${componentes}\n\n`;
    });


    copiedText += `
Totais Consolidados:
ðŸ’° Total Bruto: R$ ${formatter.format(totalBruto)}
ðŸŽ‰ Total Desconto: R$ ${formatter.format(totalDesconto)}
ðŸ’² Total Geral: R$ ${formatter.format(totalGeral)}

`;

    
    copiedText += conclusionMessage;

    totalsContainer.innerHTML = `
        <div>ðŸ’° Total Bruto: <span>R$ ${formatter.format(totalBruto)}</span></div>
        <div>ðŸŽ‰ Total Desconto: <span>R$ ${formatter.format(totalDesconto)}</span></div>
        <div>ðŸ’² Total Geral: <span>R$ ${formatter.format(totalGeral)}</span></div>
    `;

    document.getElementById('copyButton').onclick = () => {
        navigator.clipboard.writeText(copiedText).then(() => {
            alert('OrÃ§amentos copiados com sucesso!');
        });
    };
}


</script>
